<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <Button
        android:id="@+id/btn_register_container_register"
        style="@style/DialogConfirmButton"
        android:background="@drawable/sdk_selector_dialog_btn_login"
        android:gravity="center"
        android:text="@string/btn_register"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="11dp"
        android:orientation="horizontal">
        <TextView
            android:text="@string/tip_service_terms"
            android:textColor="@color/str_tip"
            android:gravity="center"
            android:textSize="@dimen/text_size_t2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_service_terms"
            android:text="@string/btn_service_terms"
            android:textColor="@color/str_normal_light_black"
            android:gravity="center"
            android:textSize="@dimen/text_size_t2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>