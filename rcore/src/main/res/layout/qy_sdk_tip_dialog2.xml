<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/margin_580px"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/qy_sdk_shape_dialog_border_bg"
    android:orientation="vertical"
    android:paddingBottom="@dimen/margin_32px">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="信息提示"
        android:textColor="@color/login_grey" />

    <TextView
        android:id="@+id/txt_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:text="@string/str_bind_phone_dialog_tips"
        android:textColor="@color/login_blue" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/qy_sdk_shape_dialog_border_bg"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_cancle"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:background="@color/login_blue"
            android:text="取消"
            android:textColor="@color/dk_gamesdk_white"
            android:textSize="@dimen/right_btn_str_size" />

        <View
            android:layout_width="@dimen/margin_56px"
            android:layout_height="1dp" />

        <Button
            android:id="@+id/button_sure"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:background="@color/dk_color_fd711d"
            android:text="确定"
            android:textColor="@color/dk_gamesdk_white"
            android:textSize="@dimen/right_btn_str_size" />
    </LinearLayout>
</LinearLayout>