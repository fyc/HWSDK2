<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/login_layout_width"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/qy_sdk_dialog_white_bg_corner2"
    android:gravity="center"
    android:orientation="vertical">

    <!-- Title -->
    <!--<include
    layout="@layout/qy_sdk_container_item_title3"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dialog_title_container_height" />-->
    <com.qiyuan.gamesdk.core.ui.dialog.biz.View.ContainerItemTitle4
        android:id="@+id/containerItemTitle4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <!-- center -->
    <TextView
        android:id="@+id/qy_sdk_container_item_title_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_24px"
        android:text="@string/str_retrieve_password_sub_title"
        android:textColor="@color/qy_sdk_dialog_gray"
        android:textSize="@dimen/text_size_t7" />

    <include
        android:id="@+id/container_item_register_phone"
        layout="@layout/qy_sdk_container_item_register_phone2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_32px"
        android:layout_marginRight="@dimen/margin_32px"
        android:layout_marginTop="@dimen/margin_16px"
        android:visibility="visible" />

    <Button
        android:id="@+id/btn_ensure"
        style="@style/DialogConfirmButton"
        android:layout_marginBottom="@dimen/margin_32px"
        android:layout_marginLeft="@dimen/margin_60px"
        android:layout_marginRight="@dimen/margin_60px"
        android:layout_marginTop="@dimen/margin_32px"
        android:background="@drawable/sdk_selector_dialog_btn_login2"
        android:gravity="center"
        android:text="@string/ensure" />

</LinearLayout>
