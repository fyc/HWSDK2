<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:background="@color/gray_bg"
                android:orientation="vertical"
                android:paddingLeft="12dp">

    <LinearLayout
        android:id="@+id/get_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/condition"
            style="@style/t0_d2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="满300元可用"
            android:textColor="@color/price_text"/>

        <TextView
            android:id="@+id/get"
            style="@style/t1_2_bold_white"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@drawable/bg_gift_get"
            android:paddingBottom="3dp"
            android:paddingLeft="9dp"
            android:paddingRight="9dp"
            android:paddingTop="3dp"
            android:text="领取"
            android:textColor="@color/btn_selected_bg" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/get_container"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            style="@style/t3_bold_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:singleLine="true"
            android:text="【王者荣耀】精英礼包"/>

        <TextView
            android:id="@+id/count"
            style="@style/t1_2_d2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="剩余数量：充足"/>

        <TextView
            android:id="@+id/due_time"
            style="@style/t1_2_d2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="过期日期：2017-04-18"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/color_1a1b1d"/>


</RelativeLayout>