<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/btn_title_container_back"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_width="@dimen/dialog_button_width"
        android:layout_height="@dimen/dialog_button_height"
        android:layout_marginStart="@dimen/margin_24px"
        android:layout_marginLeft="@dimen/margin_24px"
        android:background="@drawable/nav_icon_back"/>
    <TextView
        android:visibility="gone"
        android:id="@+id/tv_title_container_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:layout_centerInParent="true"
        android:textColor="@color/d_gray_1"
        android:textSize="@dimen/text_size_t7"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:layout_centerInParent="true"
        android:src="@drawable/logo"
        android:id="@+id/img_title_container_title"
        android:visibility="visible" />
    <Button
        android:id="@+id/btn_title_container_close"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="@dimen/margin_24px"
        android:layout_marginRight="@dimen/margin_24px"
        android:layout_width="@dimen/dialog_button_width"
        android:layout_height="@dimen/dialog_button_height"
        android:background="@drawable/nav_icon_close"/>
</RelativeLayout>