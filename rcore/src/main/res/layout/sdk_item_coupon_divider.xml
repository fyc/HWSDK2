<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">
    <TextView
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/tip_disable_coupon"
        android:text="以下此订单不适用"
        android:layout_centerInParent="true"
        style="@style/t1_2_d2" />
    <View
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:layout_centerVertical="true"
        android:background="@color/d_gray_2"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/tip_disable_coupon"
        android:layout_toStartOf="@+id/tip_disable_coupon" />
    <View
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:layout_centerVertical="true"
        android:background="@color/d_gray_2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/tip_disable_coupon"
        android:layout_toEndOf="@+id/tip_disable_coupon" />
</RelativeLayout>