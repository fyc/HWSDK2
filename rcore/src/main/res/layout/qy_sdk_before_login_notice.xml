<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id = "@+id/pull"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_width="320dp"
        android:layout_height="227dp">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:background="@drawable/tt_sdk_top_corners_bg">
            <RelativeLayout
                android:id="@+id/top"
                android:layout_width="fill_parent"
                android:layout_height="38dp"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/popup_title"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="6dp"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_t6"
                    android:textColor="#ffffff"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_width="264dp"
                    android:layout_height="wrap_content"
                    android:text="12323324234"/>

                <ImageView
                    android:id ="@+id/back_icon"
                    android:paddingRight="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="6dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/tt_sdk_popup_close_selector"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="6dp"
                android:background="#0bb75b"
                android:layout_alignParentBottom="true">
            </LinearLayout>

        </RelativeLayout>
        <LinearLayout
            android:id="@+id/popup_content_container"
            android:layout_width="fill_parent"
            android:layout_height="173dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView"
                android:background="#999999"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>