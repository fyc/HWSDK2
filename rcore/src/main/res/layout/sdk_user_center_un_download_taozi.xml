<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bg_translucence">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="77dp"
            android:src="@drawable/phone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:text="没有安装桃子手游，请先下载安装"
            android:textColor="@color/item_text_dark"
            android:textSize="@dimen/text_size_t3"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/download_taozi"
            style="@style/DialogConfirmButton"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:background="@drawable/sdk_selector_dialog_btn_orange"
            android:text="立即下载（约12M）"
            android:textColor="@color/str_normal_light_black"
            android:textSize="@dimen/text_size_t5"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="29dp"
            android:layout_marginTop="9dp"
            android:text="*建议在Wi-Fi环境下载"
            android:textColor="@color/item_text_normal"
            android:textSize="@dimen/text_size_t3"/>

    </LinearLayout>


</RelativeLayout>