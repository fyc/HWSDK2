<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false">

    <TextView
        android:id="@+id/tv_tab_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:singleLine="true"/>

    <com.flyco.tablayout.widget.MsgView
        xmlns:mv="http://schemas.android.com/apk/res-auto"
        android:id="@+id/rtv_msg_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_tab_title"
        android:layout_alignEnd="@id/tv_tab_title"
        android:layout_alignRight="@id/tv_tab_title"
        android:layout_marginEnd="-3dp"
        android:layout_marginRight="-3dp"
        android:gravity="center"
        android:textColor="@color/gray_bdbdbd"
        android:textSize="@dimen/text_size_t1_2"
        android:visibility="gone"
        mv:mv_backgroundColor="#4C4C4C"
        mv:mv_isRadiusHalfHeight="true"/>

</RelativeLayout>