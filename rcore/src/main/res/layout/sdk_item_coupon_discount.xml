<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.yiyou.gamesdk.core.ui.widget.roundview.RoundRelativeLayout
        android:id="@+id/container_pay_coupon_rr"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp">

        <RelativeLayout
            android:id="@+id/container_coupon"
            android:layout_width="68dp"
            android:layout_height="46dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/coupon_style_bg">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_amount"
                    style="@style/t7_1_bold_d1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="-2dp"
                    android:gravity="center"
                    android:padding="0dp"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    tools:text="￥9000"/>

                <TextView
                    android:id="@+id/tv_limit_status"
                    style="@style/t0_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:singleLine="true"
                    tools:text="满200使用"/>
            </LinearLayout>
        </RelativeLayout>

        <com.yiyou.gamesdk.core.ui.widget.roundview.RoundTextView
            android:id="@+id/btn_select"
            style="@style/t1_2_bold_white"
            android:layout_width="38dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:gravity="center"
            android:textColor="@color/btn_selected_bg"
            app:rv_backgroundColor="@color/coupon_disable_btn"
            app:rv_cornerRadius="100dp"
            app:rv_strokeColor="@color/btn_selected_bg"
            tools:text="领取"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/container_coupon"
            android:layout_toLeftOf="@id/btn_select"
            android:layout_toRightOf="@+id/container_coupon"
            android:layout_toStartOf="@id/btn_select"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_coupon"
                style="@style/t3_bold_white"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="2dp"
                android:maxLines="1"
                android:maxWidth="130dp"
                android:textColor="@color/white"
                tools:text="王者荣耀优惠券"/>

            <TextView
                android:id="@+id/tv_desc"
                style="@style/t1_2_d2"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="2dp"
                android:maxLines="2"
                android:maxWidth="130dp"
                tools:text="2017-08-09前可用"/>

        </LinearLayout>
    </com.yiyou.gamesdk.core.ui.widget.roundview.RoundRelativeLayout>
</LinearLayout>