<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/global_loading"
        android:layout_centerInParent="true"
        android:background="@drawable/tt_sdk_loading_bg"
        android:layout_width="@dimen/common_loading_width"
        android:layout_height="@dimen/common_loading_height">

        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:id="@+id/loading_animator"
            android:src="@drawable/tt_sdk_loading_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/loading_animator"
            android:text="@string/commiting"
            android:textColor="@color/dk_color_328dcd"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/text_size_t4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>
</RelativeLayout>