<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/login_layout_width"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/qy_sdk_dialog_white_bg_corner2"
    android:gravity="center"
    android:orientation="vertical">

    <!-- Title -->
    <include
        layout="@layout/qy_sdk_container_item_title3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_title_container_height" />

    <!-- center -->
    <TextView
        android:id="@+id/qy_sdk_container_item_title_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_24px"
        android:text="@string/str_set_password_sub_title"
        android:textColor="@color/qy_sdk_dialog_gray"
        android:textSize="@dimen/text_size_t7" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_6px"
        android:layout_marginLeft="@dimen/margin_32px"
        android:layout_marginRight="@dimen/margin_32px"
        android:layout_marginTop="@dimen/margin_32px"
        android:text="密码长度为6位以上"
        android:textColor="@color/qy_sdk_dialog_gray"
        android:textSize="@dimen/text_size_t3" />

    <com.qiyuan.gamesdk.core.ui.widget.DrawableEditText
        android:id="@+id/edit_register_container_account_password"
        style="@style/DialogEditText"
        android:layout_marginLeft="@dimen/margin_32px"
        android:layout_marginRight="@dimen/margin_32px"
        android:digits="@string/register_password_digits"
        android:drawableLeft="@drawable/login_icon_password"
        android:drawableStart="@drawable/login_icon_password"
        android:hint="@string/str_set_register_password_hint"
        android:inputType="textPassword"
        android:maxLines="1" />

    <Button
        android:id="@+id/btn_register_container_register"
        style="@style/DialogConfirmButton"
        android:layout_marginLeft="@dimen/margin_60px"
        android:layout_marginRight="@dimen/margin_60px"
        android:layout_marginTop="@dimen/margin_32px"
        android:background="@drawable/sdk_selector_dialog_btn_login2"
        android:gravity="center"
        android:text="@string/str_enter_game" />

    <com.qiyuan.gamesdk.core.ui.dialog.biz.View.ContainerItemBottom2
        android:id="@+id/containerItemBottom2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_8"
        android:visibility="visible" />
</LinearLayout>
