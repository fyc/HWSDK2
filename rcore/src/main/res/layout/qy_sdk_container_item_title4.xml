<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dialog_title_container_height"
    android:background="@drawable/qy_sdk_dialog_blue_title">

    <Button
        android:id="@+id/btn_title_container_back"
        android:layout_width="@dimen/dialog_button_width"
        android:layout_height="@dimen/dialog_button_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_24px"
        android:layout_marginStart="@dimen/margin_24px"
        android:background="@drawable/nav_icon_back2"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tv_title_container_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/str_qiyuan_sdk_game_title"
        android:textColor="@color/qy_sdk_dialog_white"
        android:textSize="@dimen/text_size_t7"
        android:visibility="visible" />

    <Button
        android:id="@+id/btn_title_container_refresh"
        android:layout_width="@dimen/dialog_button_width"
        android:layout_height="@dimen/dialog_button_height"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/margin_36px"
        android:layout_marginRight="@dimen/margin_36px"
        android:layout_toLeftOf="@id/btn_title_container_close"
        android:background="@drawable/nav_icon_refresh2"
        android:visibility="visible" />

    <View
        android:id="@+id/btn_title_container_refresh_line"
        android:layout_width="1dp"
        android:layout_marginEnd="@dimen/margin_18px"
        android:layout_marginRight="@dimen/margin_18px"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_10px"
        android:layout_marginBottom="@dimen/margin_10px"
        android:layout_toLeftOf="@id/btn_title_container_close"
        android:background="@color/white"/>

    <Button
        android:id="@+id/btn_title_container_close"
        android:layout_width="@dimen/dialog_button_width"
        android:layout_height="@dimen/dialog_button_height"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/margin_24px"
        android:layout_marginRight="@dimen/margin_24px"
        android:background="@drawable/nav_icon_close2"
        android:visibility="visible" />
</RelativeLayout>