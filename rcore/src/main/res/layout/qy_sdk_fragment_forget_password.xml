<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_translucence"
              android:orientation="vertical">

    <EditText
        android:id="@+id/edt_phone"
        style="@style/SimpleEditText"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bind_phone_edt_height"
        android:layout_marginLeft="@dimen/bind_phone_input_margin_lr"
        android:layout_marginRight="@dimen/bind_phone_input_margin_lr"
        android:layout_marginTop="@dimen/margin_48px"
        android:background="@color/edt_input"
        android:drawableLeft="@drawable/login_icon_phone"
        android:drawablePadding="@dimen/space_12"
        android:drawableStart="@drawable/login_icon_phone"
        android:hint="@string/edt_phone_hint"
        android:imeOptions="actionNext|flagNoExtractUi"
        android:inputType="phone|number"
        android:maxLength="11"
        android:textColor="@color/item_text_normal"
        android:textColorHint="@color/item_text_dark"
        android:textSize="@dimen/text_size_t5"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/bind_phone_input_margin_lr"
        android:layout_marginRight="@dimen/bind_phone_input_margin_lr"
        android:background="@color/fragment_default_bg"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bind_phone_edt_height"
        android:layout_marginLeft="@dimen/bind_phone_input_margin_lr"
        android:layout_marginRight="@dimen/bind_phone_input_margin_lr">

        <EditText
            android:id="@+id/edt_phone_vcode"
            style="@style/SimpleEditText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:drawableLeft="@drawable/login_icon_verificationcode"
            android:drawablePadding="@dimen/space_12"
            android:drawableStart="@drawable/login_icon_verificationcode"
            android:hint="@string/input_verification_tips"
            android:imeOptions="actionNext|flagNoExtractUi"
            android:background="@color/edt_input"
            android:inputType="number"
            android:textColor="@color/item_text_normal"
            android:textColorHint="@color/item_text_dark"
            android:textSize="@dimen/text_size_t5"/>

        <Button
            android:id="@+id/btn_verification_code_get"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:maxLines="1"
            android:layout_marginLeft="@dimen/margin_24px"
            android:layout_marginStart="@dimen/margin_24px"
            android:layout_weight="1"
            android:background="@drawable/sdk_selector_small_btn_orange"
            android:text="@string/request_get_verification_code"
            android:textColor="@color/edt_input"
            android:textSize="@dimen/text_size_t3"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/bind_phone_input_margin_lr"
        android:layout_marginRight="@dimen/bind_phone_input_margin_lr"
        android:background="@color/fragment_default_bg"/>

    <EditText
        android:id="@+id/edt_password"
        style="@style/SimpleEditText"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bind_phone_edt_height"
        android:layout_marginLeft="@dimen/bind_phone_input_margin_lr"
        android:layout_marginRight="@dimen/bind_phone_input_margin_lr"
        android:digits="@string/register_password_digits"
        android:background="@color/edt_input"
        android:textColor="@color/item_text_normal"
        android:textColorHint="@color/item_text_dark"
        android:textSize="@dimen/text_size_t5"
        android:drawableLeft="@drawable/login_icon_password"
        android:drawablePadding="@dimen/space_12"
        android:drawableStart="@drawable/login_icon_password"
        android:hint="@string/reset_password_new_password_tip"
        android:inputType="textPassword"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/bind_phone_input_margin_lr"
        android:layout_marginRight="@dimen/bind_phone_input_margin_lr"
        android:background="@color/fragment_default_bg"/>

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bind_phone_edt_height"
        android:layout_marginLeft="@dimen/bind_phone_input_margin_lr"
        android:layout_marginRight="@dimen/bind_phone_input_margin_lr"
        android:layout_marginTop="@dimen/margin_48px"
        android:background="@drawable/sdk_selector_dialog_btn_orange"
        android:enabled="false"
        android:text="@string/ensure"
        android:textColor="@color/edt_input"
        android:textSize="@dimen/text_size_t7"/>
</LinearLayout>