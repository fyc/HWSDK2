<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tt_sdk_account_history_list_item_selector"
    >
    <LinearLayout 
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="@dimen/item_height_80px"
        >
    <android.support.v4.widget.Space
        android:layout_width="@dimen/space_12"
        android:layout_height="1px"/>
    <ImageView
        android:id="@+id/dp_green_dot"
        android:src="@drawable/tt_sdk_ic_green_dot_deep"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <android.support.v4.widget.Space
        android:layout_width="@dimen/space_8"
        android:layout_height="1px"/>
    <TextView
        android:id="@+id/dp_data_name"
        android:textSize="@dimen/text_size_t4"
        android:textColor="@color/edt_input"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
         />
    <ImageView
        android:id="@+id/dp_close"
        android:src="@drawable/nav_icon_close"
        android:layout_gravity="center_vertical"
        android:layout_width="15dp"
        android:layout_height="15dp" />
    <android.support.v4.widget.Space
        android:layout_width="@dimen/space_12"
        android:layout_height="1px"/>
    </LinearLayout>
    <View
        android:id="@+id/view_line" 
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_363739"
        android:layout_marginLeft="@dimen/margin_16px"
        android:layout_marginRight="@dimen/margin_16px"
        />
    
</LinearLayout>