<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/login_layout_width"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/qy_sdk_dialog_white_bg_corner"
    android:gravity="center"
    android:orientation="vertical">

    <!-- Title -->
    <include
        layout="@layout/qy_sdk_container_item_title3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_title_container_height" />

    <TextView
        android:id="@+id/qy_sdk_container_item_title_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_24px"
        android:text="@string/str_phone_account_login"
        android:textColor="@color/qy_sdk_dialog_gray"
        android:textSize="@dimen/text_size_t7" />

    <!-- 用户名密码 -->
    <include
        android:id="@+id/container_item_login_phone"
        layout="@layout/qy_sdk_container_item_login_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_32px"
        android:layout_marginRight="@dimen/margin_32px" />
    <include
        android:id="@+id/container_item_login_account"
        layout="@layout/qy_sdk_container_item_login_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_32px"
        android:layout_marginRight="@dimen/margin_32px"
        android:visibility="gone" />
    <Button
        android:id="@+id/btn_login_container_login"
        style="@style/DialogConfirmButton"
        android:layout_marginLeft="@dimen/margin_60px"
        android:layout_marginRight="@dimen/margin_60px"
        android:background="@drawable/sdk_selector_dialog_btn_login2"
        android:gravity="center"
        android:text="@string/str_enter_game" />
    <!-- Bottom -->
    <include layout="@layout/qy_sdk_container_item_login_bottom2" />


</LinearLayout>