<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">

    <LinearLayout
        android:layout_width="290dp"
        android:layout_height="167dp"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:text="领取礼包成功"
            android:textColor="@color/d_gray_1"
            android:textSize="@dimen/text_size_t7_1_1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/package_code"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/d_gray_6"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:paddingLeft="8dp"
                android:textColor="@color/d_gray_1"
                android:textSize="@dimen/text_size_t5"
                tools:text="兑换码：CMY9945835"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E2E2E2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/dialog_cancel"
                android:layout_width="144dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="取消"
                android:textColor="#acacac"
                android:textSize="@dimen/text_size_t7_1"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#E2E2E2"/>

            <TextView
                android:id="@+id/dialog_confirm"
                android:layout_width="144dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="复制"
                android:textColor="#FFFFD600"
                android:textSize="@dimen/text_size_t7_1"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>