<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/login_layout_width"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/qy_sdk_dialog_white_bg_corner2"
    android:gravity="center"
    android:orientation="vertical">

    <!-- Title -->
    <include
        layout="@layout/qy_sdk_container_item_title3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_title_container_height" />

    <LinearLayout
        android:id="@+id/radio_group_item_register_type"
        android:layout_width="match_parent"
        android:layout_height="@dimen/register_rbt_height"
        android:layout_marginLeft="@dimen/margin_40px"
        android:layout_marginRight="@dimen/margin_40px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radio_item_register_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawableBottom="@drawable/qy_sdk_shape_dialog_radio_button_bg_empty"
            android:gravity="center"
            android:text="@string/register_by_phone"
            android:textColor="@color/qy_sdk_selector_text_color_dialog_register_container_tab_radio_button2"
            android:textSize="@dimen/text_size_t6"
            android:textStyle="normal|bold" />

        <View
            style="@style/DialogDivider.Vertical"
            android:layout_gravity="center"
            android:background="@color/radio_button_divider" />

        <RadioButton
            android:id="@+id/radio_item_register_account"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableBottom="@drawable/qy_sdk_shape_dialog_radio_button_bg_empty"
            android:gravity="center"
            android:text="@string/str_a_key_to_regist"
            android:textColor="@color/qy_sdk_selector_text_color_dialog_register_container_tab_radio_button2"
            android:textSize="@dimen/text_size_t6"
            android:textStyle="normal|bold" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="6dp"
        android:background="@color/radio_button_divider" />

    <!-- center -->
    <include
        android:id="@+id/container_item_register_phone"
        layout="@layout/qy_sdk_container_item_register_phone2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_32px"
        android:layout_marginRight="@dimen/margin_32px"
        android:visibility="visible" />

    <include
        android:id="@+id/container_item_register_account"
        layout="@layout/qy_sdk_container_item_register_key"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_32px"
        android:layout_marginRight="@dimen/margin_32px"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_register_container_register"
        style="@style/DialogConfirmButton"
        android:layout_marginLeft="@dimen/margin_60px"
        android:layout_marginRight="@dimen/margin_60px"
        android:layout_marginTop="@dimen/margin_32px"
        android:background="@drawable/sdk_selector_dialog_btn_login2"
        android:gravity="center"
        android:text="@string/str_enter_game" />

    <!-- Bottom -->
    <include
        android:id="@+id/container_item_register_phone_bottom"
        layout="@layout/qy_sdk_container_item_register_bottom2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_8"
        android:layout_marginTop="@dimen/space_8" />
    <!-- Bottom -->
    <!--<include-->
        <!--android:id="@+id/container_item_register_account_bottom"-->
        <!--layout="@layout/qy_sdk_container_item_login_bottom2"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginTop="@dimen/space_8"-->
        <!--android:visibility="visible" />-->
    <com.qiyuan.gamesdk.core.ui.dialog.biz.View.ContainerItemBottom2
        android:id="@+id/containerItemBottom2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_8"
        android:visibility="visible"/>
</LinearLayout>
