<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/account_liearlayout_height"
                android:background="@color/str_normal_light_black">

    <TextView
        android:id="@+id/tv_children_account_username"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_40px"
        android:layout_marginStart="@dimen/margin_40px"
        android:gravity="center"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:maxWidth="150dp"
        android:textColor="@color/item_text_normal"
        android:textSize="@dimen/text_size_t3"/>


    <ImageView
        android:id="@+id/btn_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/margin_40px"
        android:layout_marginRight="@dimen/margin_40px"
        android:src="@drawable/icon_edit"/>

    <TextView
        android:id="@+id/tv_is_selected"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@+id/btn_edit"
        android:layout_toStartOf="@+id/btn_edit"
        android:gravity="center"
        android:textColor="@color/item_text_dark"
        android:textSize="@dimen/text_size_t3"/>
</RelativeLayout>