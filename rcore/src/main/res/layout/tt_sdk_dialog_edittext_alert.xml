<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/tt_sdk_shape_dialog_border_bg"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical" android:layout_width="@dimen/margin_580px"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/title"
            android:layout_marginTop="@dimen/margin_50px"
            android:textSize="@dimen/text_size_t7"
            android:textStyle="bold"
            android:textColor="@color/dk_color_5e5e5e"
            android:layout_gravity="center_horizontal"
            android:text="@string/tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <com.yiyou.gamesdk.core.ui.widget.DrawableEditText
            android:id="@+id/edt_child_username"
            android:layout_marginTop="@dimen/margin_40px"
            android:textSize="@dimen/text_size_t5"
            android:maxLines="1"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textColor="@color/dk_color_5e5e5e"
            android:hint="@string/hint_add_child_user"
            android:background="@drawable/tt_sdk_dialog_edt_bg"
            android:layout_marginBottom="@dimen/margin_40px"
            android:layout_marginLeft="@dimen/margin_32px"
            android:layout_marginRight="@dimen/margin_32px"
            android:textColorHint="@color/edt_hint"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_24px"
            android:paddingRight="@dimen/margin_24px"
            />

        <View
            android:id="@+id/v_dialog_content_bottom"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_0F000000" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_96px"
            >

            <TextView
                android:textColor="@color/dk_color_acacac"
                android:gravity="center"
                android:text="@string/cancel"
                android:id="@+id/cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/text_size_t7"
                android:background="@drawable/tt_sdk_selector_dialog_btn_bg"
                />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/color_19000000" />


            <TextView
                android:textColor="@color/btn_selected_bg"
                android:gravity="center"
                android:text="@string/bind_phone_tip3"
                android:id="@+id/ensure"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/text_size_t7"
                android:background="@drawable/tt_sdk_selector_dialog_btn_bg"
                />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>