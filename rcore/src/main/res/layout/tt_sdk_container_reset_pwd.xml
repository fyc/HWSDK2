<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/login_layout_width"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/tt_sdk_dialog_white_bg_corner"
    android:gravity="center"
    android:orientation="vertical">

    <!-- Title -->
    <include
        layout="@layout/tt_sdk_container_item_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_title_register_container_height" />

    <!-- center -->
    <include
        android:id="@+id/container_item_register_phone"
        layout="@layout/tt_sdk_container_item_register_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_32px"
        android:layout_marginLeft="@dimen/margin_32px"
        android:layout_marginRight="@dimen/margin_32px" />

    <!-- Bottom -->
    <Button
        android:id="@+id/btn_reset_pwd_confirm"
        style="@style/DialogConfirmButton"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/margin_32px"
        android:layout_marginLeft="@dimen/margin_32px"
        android:layout_marginRight="@dimen/margin_32px"
        android:layout_marginTop="@dimen/margin_16px"
        android:background="@drawable/sdk_selector_dialog_btn_login"
        android:text="@string/ensure" />
