<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@drawable/sdk_bg_coupons"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_main"
            android:layout_width="95dp"
            android:layout_height="match_parent"
            android:background="@drawable/sdk_bg_coupons_red"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <LinearLayout
                    android:id="@+id/price_container"
                    android:layout_width="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/yuan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:text="￥"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/tv_coupon_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:gravity="center"
                        android:text="2"
                        android:textColor="@android:color/white"
                        android:textSize="32sp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_coupon_limit_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/price_container"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="满200元使用"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_t1_2"/>

            </RelativeLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_coupon_type"
            android:layout_width="42dp"
            android:layout_height="16dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/rl_main"
            android:layout_toRightOf="@id/rl_main"
            android:background="@drawable/tz_sdk_radius_unused_bg"
            android:gravity="center"
            android:text="现金券"
            android:textColor="@android:color/white"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/tv_coupon_title"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="7dp"
            android:layout_toEndOf="@id/tv_coupon_type"
            android:layout_toRightOf="@id/tv_coupon_type"
            android:gravity="center"
            android:text="title!!!!!!!!!!"
            android:textColor="@color/item_text_normal"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tv_coupon_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_coupon_type"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/tv_coupon_type"
            android:layout_marginRight="16dp"
            android:paddingBottom="3dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:singleLine="true"
            android:text="全平台所有游戏通用（除10款外）"
            android:textColor="@color/item_text_dark"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/tv_coupon_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/tv_coupon_content"
            android:layout_alignLeft="@+id/tv_coupon_type"
            android:layout_alignStart="@+id/tv_coupon_type"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:text="有效期：2017.01.20-2017.06.19"
            android:textColor="@color/item_text_dark"
            android:textSize="10sp"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_above="@id/tv_coupon_content"
            android:layout_alignLeft="@+id/tv_coupon_type"
            android:layout_alignStart="@+id/tv_coupon_type"
            android:layout_marginRight="16dp"
            android:background="@drawable/sdk_dash_divider"
            android:layerType="software"/>

        <ImageView
            android:id="@+id/img_coupon_used"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/sdk_icon_used"/>

        <ImageView
            android:id="@+id/img_expand"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="3dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/sdk_icon_coupons_unfold"
            android:visibility="gone"/>


    </RelativeLayout>

    <TextView
        android:id="@+id/tv_more_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_bg"
        android:padding="10dp"
        android:text="cccccccccccccccccccccccc"
        android:textColor="@color/item_text_dark"
        android:textSize="@dimen/text_size_t1_2"
        android:visibility="gone"/>
</LinearLayout>
