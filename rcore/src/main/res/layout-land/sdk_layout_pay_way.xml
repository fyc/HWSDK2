<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tip_discount"
        style="@style/t3_d1"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:background="@color/tip_text_bg"
        android:text="@string/tip_discount"/>
    <RelativeLayout
        android:layout_below="@+id/tip_discount"
        android:id="@+id/container_price"
        android:layout_marginTop="15dp"
        style="@style/PayWapContainerItemLand">
        <TextView
            style="@style/t5_d2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="商品金额"/>
        <TextView
            android:id="@+id/goods_price"
            style="@style/t5_bold_d1"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            tool:text="¥60.00"/>
        <TextView
            android:id="@+id/txt_discount"
            style="@style/t1_2_d2"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/goods_price"
            tool:text="原价：¥100.00 已省：¥40.00" />

        <View
            android:layout_below="@+id/txt_discount"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/d_gray_2"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/container_pay_coupon"
        android:layout_below="@+id/container_price"
        style="@style/PayWapContainerItemLand"
        android:padding="0dp">
        <TextView
            style="@style/t5_d2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="优惠券"/>
        <TextView
            android:id="@+id/price_coupon"
            style="@style/t5_bold_d1"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            tool:text="-¥0.00"/>
    </RelativeLayout>
    <com.yiyou.gamesdk.core.ui.widget.roundview.RoundTextView
        android:id="@+id/btn_select_coupon"
        android:text="选择"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/container_pay_coupon"
        android:layout_toEndOf="@+id/container_pay_coupon"
        android:layout_alignTop="@+id/container_pay_coupon"
        android:layout_alignBottom="@+id/container_pay_coupon"
        android:gravity="center"
        android:textColor="@color/blue_button"
        app:rv_isRadiusHalfHeight="true"
        app:rv_strokeColor="@color/blue_button"
        app:rv_strokeWidth="1dp"
        android:paddingBottom="2dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="2dp"
        style="@style/t3_bold_d1" />
    <RelativeLayout
        android:id="@+id/container_wallet"
        android:layout_below="@+id/container_pay_coupon"
        style="@style/PayWapContainerItemLand">
        <TextView
            style="@style/t5_d2"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="钱包抵扣"/>

        <TextView
            android:id="@+id/price_wallet"
            style="@style/t5_bold_d1"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            tool:text="-¥10.00" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/container_remain_fee"
        android:layout_below="@+id/container_wallet"
        style="@style/PayWapContainerItemLand">
        <TextView
            style="@style/t5_d2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="还需支付"/>
        <TextView
            android:id="@+id/remain_fee"
            style="@style/t7_2_bold_d1"
            android:textColor="@color/price_text"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            tool:text="¥40.00"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_below="@+id/container_remain_fee"
        android:layout_marginTop="15dp"
        style="@style/PayWapContainerItemLand">
        <com.yiyou.gamesdk.core.ui.widget.roundview.RoundTextView
            android:id="@+id/btn_wechat_pay"
            android:text="微信支付"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_marginRight="5dp"
            android:textColor="@color/white"
            app:rv_cornerRadius="6dp"
            app:rv_backgroundColor="@color/green_wechat"/>
        <com.yiyou.gamesdk.core.ui.widget.roundview.RoundTextView
            android:id="@+id/btn_alipay"
            android:text="支付宝支付"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:textColor="@color/white"
            app:rv_cornerRadius="6dp"
            app:rv_backgroundColor="@color/blue_alipay"/>
        <com.yiyou.gamesdk.core.ui.widget.roundview.RoundTextView
            android:visibility="gone"
            android:id="@+id/btn_rcoin_pay"
            android:text="确认支付"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:textColor="@color/dk_gamesdk_black"
            app:rv_cornerRadius="6dp"
            app:rv_backgroundColor="@color/btn_selected_bg"/>
    </LinearLayout>
</RelativeLayout>