<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:background="@color/gray_bg"
                android:orientation="vertical"
                android:paddingLeft="12dp">

    <LinearLayout
        android:id="@+id/get_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/condition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="满300元可用"
            android:textColor="@color/price_text"
            android:textSize="@dimen/text_size_t1_2"/>

        <TextView
            android:id="@+id/get"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@drawable/bg_gift_get"
            android:paddingBottom="5dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="5dp"
            android:text="领取"
            android:textColor="@color/btn_selected_bg"
            android:textSize="@dimen/text_size_t3"
            android:textStyle="bold"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/get_container"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:singleLine="true"
            android:text="【王者荣耀】精英礼包"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_t3"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="剩余数量：充足"
            android:textColor="@color/d_gray_2"
            android:textSize="@dimen/text_size_t1_2"/>

        <TextView
            android:id="@+id/due_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="过期日期：2017-04-18"
            android:textColor="@color/d_gray_2"
            android:textSize="@dimen/text_size_t1_2"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/color_1a1b1d"/>


</RelativeLayout>