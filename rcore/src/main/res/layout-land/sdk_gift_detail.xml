<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_translucence"
            android:orientation="vertical"
            android:paddingTop="0.5dp"
            android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray_bg"
            android:orientation="vertical"
            android:paddingLeft="12dp">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_t3"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/d_gray_2"
                android:textSize="@dimen/text_size_t1_2"/>

            <TextView
                android:id="@+id/due_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="4dp"
                android:textColor="@color/d_gray_2"
                android:textSize="@dimen/text_size_t1_2"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:text="礼包内容"
            android:textColor="@color/item_text_dark"
            android:textSize="@dimen/text_size_t1_2"/>

        <TextView
            android:id="@+id/desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray_bg"
            android:paddingBottom="14dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="14dp"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_t3"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:text="使用方法"
            android:textColor="@color/item_text_dark"
            android:textSize="@dimen/text_size_t1_2"/>

        <TextView
            android:id="@+id/usage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray_bg"
            android:paddingBottom="14dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="14dp"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_t3"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:text="使用范围"
            android:textColor="@color/item_text_dark"
            android:textSize="@dimen/text_size_t1_2"/>

        <TextView
            android:id="@+id/use_range"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray_bg"
            android:paddingBottom="14dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="14dp"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_t3"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:background="@color/gray_bg">

            <Button
                android:id="@+id/get"
                style="@style/DialogConfirmButton"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginLeft="42dp"
                android:layout_marginRight="42dp"
                android:background="@drawable/sdk_selector_dialog_btn_orange"
                android:singleLine="true"
                android:text="领取礼包"
                android:textColor="#191919"
                android:textSize="@dimen/text_size_t5"
                android:visibility="gone"/>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>