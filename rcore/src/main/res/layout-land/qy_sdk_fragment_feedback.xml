<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_translucence"
              android:orientation="vertical">

    <EditText
        android:id="@+id/content_edt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="4dp"
        android:background="@color/edt_input"
        android:gravity="top"
        android:hint="@string/hint_feedback"
        android:padding="@dimen/margin_32px"
        android:textColor="@color/item_text_normal"
        android:textColorHint="@color/btn_dark"
        android:textSize="@dimen/text_size_t5"/>
</LinearLayout>